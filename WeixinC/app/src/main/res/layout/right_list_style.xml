<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentRight="true"
 >
        <TextView
            android:id="@+id/tv_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:textColor="#000000"
            android:text="星期一 14：26" />

        <TextView
            android:id="@+id/tv_chat_me_message"
            android:layout_below="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:layout_marginTop="16dp"
            android:layout_toLeftOf="@+id/iv_chat_imagr_right"
            android:background="#6bd6e7"
            android:padding="8dp"
            android:text="枪毙五十次，快去" />

        <ImageView
            android:id="@+id/iv_chat_imagr_right"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_below="@+id/tv_time"
            android:layout_alignParentRight="true"
            android:layout_gravity="top"
            android:src="@drawable/tou" />
</RelativeLayout>